#pagination
  a
    display block
    padding 8px 14px
    border-radius 5px
    background color-link
    color color-dark
    font-family font-title
    font-weight 500
    text-shadow 0 0 1px #fff
    margin-bottom 50px
    &:hover
      background color-dark
      color color-link
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon