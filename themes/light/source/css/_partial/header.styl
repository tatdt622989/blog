#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  @media (max-width: 480px)
    display flex
    flex-direction column
    margin 30px auto 20px auto
  a
    color #28cb92
    font-weight bold
    &:hover
      color #28cb92
      text-decoration none

  .logo
    max-width 140px
    a
      display flex
      img
        width 100%
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      @media (max-width: 480px)
        display flex
      li
        float left
        margin-left 30px
        @media (max-width: 480px)
          margin 0 10px
        a
          font-size 18px
          color #3f3f3f
          transition all 0.3s ease
          &:hover
            opacity 0.8